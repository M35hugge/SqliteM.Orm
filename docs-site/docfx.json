{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "SQLiteM.Abstractions/SQLiteM.Abstractions.csproj",
            "SQLiteM.Orm/SQLiteM.Orm.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "./apiFilter.yml"
    }
  ],
  "build": {
    
    "content": [
      { "files": [ "api/**.yml", "api/index.md" ] },
      {
        "src": "../docs",
        "files": [ "**/**.md" ],
        "dest": "articles"
      },
      { "files": [ "index.md" ] }
    ],
    "globalMetadata": {
      "_appTitle": "© SQLiteM",
      "_appFooter": "© SQLiteM Dokumentation",
      "_enableSearch": "true"
    },
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
    "template": ["default", "templates/sqlitem"],
    "dest": "_site"
  }
}
