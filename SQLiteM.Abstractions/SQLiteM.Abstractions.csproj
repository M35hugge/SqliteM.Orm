<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <!-- Doku/Qualität -->
	  <Nullable>enable</Nullable>
	  <TreatWarningsAsErrors Condition="'$(Configuration)'=='Release'">true</TreatWarningsAsErrors>
	  <GenerateDocumentationFile>true</GenerateDocumentationFile>
	  <TargetFramework>net9.0</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>

	  <PackageId>SQLiteM.Abstractions</PackageId>
	  <Version>0.1.3</Version>
	  <!-- SemVer: 0.x für erste Releases; für Previews 1.0.0-preview.1 -->
	  <Authors>DN</Authors>
	  <Description>Leichtgewichtiges Micro-ORM für SQLite (C#)</Description>
	  <PackageTags>sqlite;orm;micro-orm;repository;unit-of-work</PackageTags>
	  <RepositoryUrl>
		  https://github.com/M35hugge/SQLiteM
	  </RepositoryUrl>
	  <RepositoryType>git</RepositoryType>
	  <PackageProjectUrl>
		  https://github.com/M35hugge/SQLiteM
	  </PackageProjectUrl>
	  <PackageLicenseFile>LICENSE</PackageLicenseFile>
	  <!-- oder SPDX deiner Wahl -->
	  <PackageReadmeFile>README.md</PackageReadmeFile>
	  <PackageIcon>icon.png</PackageIcon>

	  <!-- Symbols & SourceLink -->
	  <PublishRepositoryUrl>true</PublishRepositoryUrl>
	  <EmbedUntrackedSources>true</EmbedUntrackedSources>
	  <IncludeSymbols>true</IncludeSymbols>
	  <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
	<ItemGroup>
		<None Include="..\icon.png" Pack="true" PackagePath="\" />
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
	</ItemGroup>
	<ItemGroup>
	  <None Update="LICENSE" Pack="true" PackagePath="\">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	  <None Update="README.md" Pack="true" PackagePath="\">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>
</Project>
